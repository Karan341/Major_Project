<% layout("/layouts/boilerplate") %>

  
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow-lg p-4">
          <h3 class="mb-1 text-center fw-bold">Create New Listing</h3>
          <p class="text-center text-muted mb-4">
            Fill in the details to publish your listing
          </p>

          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <!-- Title -->
            <div class="mb-3">
              <label class="form-label">Title</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                <input name="listing[title]" type="text" class="form-control" placeholder="Listing title" required>
                <div class="valid-feedback">
                  Title Looks good!
                </div>
              </div>

            </div>

            <!-- Description -->
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" rows="4" placeholder="Describe your listing"
                required></textarea>
            </div>

            <!-- Image -->
            <div class="mb-3">
              <label class="form-label"> Upload Image</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-image"></i></span>
                <input name="listing[image]" type="file" class="form-control"
                required
                 
              >
            </div>

             

            <!-- Price -->
            <div class="mb-3">
              <label class="form-label">Price</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                <input name="listing[price]" type="numbe" step="0.01" class="form-control" placeholder="Enter price"
                  required>
                <div class="invalid-feedback">
                  Please Enter valid Price
                </div>
              </div>
            </div>

            <!-- Country -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">Country</label>
                <input name="listing[country]" type="text" class="form-control" placeholder="Country" required>
                <div class="invalid-feedback">
                  Please Enter the ountry name
                </div>
              </div>
              <!-- country -->
              <div class="col-md-6 mb-4">
                <label class="form-label">Location</label>
                <input name="listing[location]" type="text" class="form-control" placeholder="City / Area" required>
                <div class="invalid-feedback">
                  Please Enter your location
                </div>

              </div>
            </div>

            <!-- Button -->
            <div class="d-grid">
              <button class="btn btn-dark btn-lg custom-btn">
                <i class="bi bi-plus-circle me-2"></i>
                Add Listing
              </button>

            </div>

          </form>
        </div>

      </div>
    </div>
  </div>




  